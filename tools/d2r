#!/usr/bin/env python
# -*- coding: utf-8 -*-
#
import argparse
import decimal2rational

if __name__ == '__main__':
    parser = argparse.ArgumentParser(
        description='Convert decimal to (approximate) rational number.'
        )
    parser.add_argument(
            'decimal',
            type=float,
            help='input decimal number'
            )
    parser.add_argument(
            '--tolerance', '-t',
            type=float,
            default=1.0e-10,
            help='relative tolerance'
            )
    parser.add_argument(
            '--max-denominator', '-m',
            type=int,
            default=1000,
            help='maximum denominator to check'
            )

    args = parser.parse_args()

    num, denom, mult_pi, fun_name, diff = decimal2rational.decimal2rational(
            args.decimal,
            tol=args.tolerance,
            max_denominator=args.max_denominator
            )

    if num is None:
        print('No rational number found that approximates %r well enough.' %
              args.decimal
              )
    else:
        if denom == 1:
            num_str = '%d' % num
        else:
            num_str = '%d / %d' % (num, denom)

        if mult_pi == 1:
            num_str += ' * pi'
        elif mult_pi > 1:
            num_str += ' * pi^%d' % mult_pi

        if fun_name is None:
            print('%r = %s   %+0.4e' % (args.decimal, num_str, diff))
        else:
            print('%r = %s(%s)   %+0.4e' %
                  (args.decimal, fun_name, num_str, diff)
                  )
